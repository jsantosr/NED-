{
  "manifest_version": 3,
  "name": "NED+ (Never Ending Disney+)",
  "version": "0.1",
  "description": "Never Ending Disney+",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.disneyplus.com/*"
      ],
      "js": [
        "scripts/jquery-3.6.0.min.js",
        "scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}